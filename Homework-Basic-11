#include <stdio.h>
#include <stdlib.h>

int main(void) 
{
	int x,y,z,t;
	printf("請輸入三個整數:\n"); 
	scanf("%d%d%d",&x,&y,&z);
	
		if(x>y)
        {t=x;x=y;y=t;}/*交換x,y的值*/
		if(y>z)
	    {t=y;y=z;z=t;}/*交換z,y的值*/
		if(x>z)
		{t=z;z=x;x=t;}/*交換x,z的值*/
	printf("由小到大為:%d,%d,%d\n",x,y,z);
	system("pause");
	return 0;
}
